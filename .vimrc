" #############################################################################
" # ~/.vimrc
" #############################################################################

" colors
set t_Co=256
syntax enable

" tabs
set tabstop=4
set softtabstop=4
set expandtab

" ui
set backspace=indent,eol,start
set cmdheight=1
set cursorline
set ignorecase
set lazyredraw
set magic
set mat=2
set number
set ruler
set showcmd
set showmatch
set smartcase

" files
filetype indent on
filetype plugin on
set encoding=utf-8
set nobackup
set noswapfile
set nowb

" No annoying sounds on errors
set noerrorbells
set novisualbell
set t_vb=
set tm=500

" git stuff
setlocal textwidth=79
setlocal colorcolumn=+1

" #############################################################################
